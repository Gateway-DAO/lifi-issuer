{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}